<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.kumar.akshay.libmag.librarian.AddBook.AddBookFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/emailEditText"
            android:layout_marginTop="12dp"
            android:text="Add Book"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/bookNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Book Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/bookAuthorEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookNameEditText"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Book Author"
            android:inputType="text" />

        <EditText
            android:id="@+id/bookPublisherEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookAuthorEditText"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Book Publisher"
            android:inputType="text" />

        <EditText
            android:id="@+id/bookEditionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookPublisherEditText"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Book Edition/Year of Publish"
            android:inputType="text" />

        <EditText
            android:id="@+id/bookDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookEditionEditText"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:lines="6"
            android:scrollbars="vertical"
            android:hint="Book Description"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/bookLocationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookDescriptionEditText"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Rack Number"
            android:inputType="text" />

        <Button
            android:id="@+id/addBookBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bookDescriptionEditText"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:text="Add Book" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/addBookBtn"
            android:layout_alignBottom="@+id/addBookBtn"
            android:layout_alignEnd="@+id/bookDescriptionEditText"
            android:layout_marginEnd="59dp"
            android:text="Cancel" />

    </RelativeLayout>
</ScrollView>
